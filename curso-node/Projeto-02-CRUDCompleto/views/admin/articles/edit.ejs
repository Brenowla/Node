<%- include('../../partials/header') %> 
<body>
    <%- include('../../partials/navbar') %> 
    
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Editar artigo</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input type="hidden" value="<%= article.id %> " name="id">
                    <input class="form-control mb-2" type="text" name="title" value="<%= article.title %> " placeholder="Defina o tÃ­tulo do artigo">
                    <textarea id="article" class="form-control" placeholder="Escreva o artigo aqui!" name="body" id="" cols="30" rows="25"></textarea>
                    <label for="category" class="mt-2">Categoria</label>
                    <select name="category" id="" class="form-control">
                        <% categories.forEach(category=>{%>
                            <% if(category.id==article.categoryId){%>
                                <option value="<%= category.id %> " selected><%= category.title %> </option>
                            <%}else {%>
                                <option value="<%= category.id %> "><%= category.title %> </option>
                            <% } %> 
                            
                        <% }) %> 
                    </select>
                    <button class="btn btn-success mt-4">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
    <div id="content" style="display: none;">
        <%- article.body %> 
    </div>
</body>
<%- include('../../partials/footer') %> 


<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        language: 'pt_BR',
        init_instance_callback: ()=>{
            tinymce.get("article").setContent($("#content").html())
        }
    })

</script>