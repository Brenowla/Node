<%- include('../../partials/header') %> 
<body>
    <%- include('../../partials/navbar') %> 
    
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/save">
                    <input class="form-control mb-2" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
                    <textarea id="article" class="form-control" placeholder="Escreva o artigo aqui!" name="body" id="" cols="30" rows="25"></textarea>
                    <label for="category" class="mt-2">Categoria</label>
                    <select name="category" id="" class="form-control">
                        <% categories.forEach(category=>{%>
                            <option value="<%= category.id %> "><%= category.title %> </option>
                        <% }) %> 
                    </select>
                    <button class="btn btn-success mt-4">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer') %> 

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        language: 'pt_BR'
    })

</script>